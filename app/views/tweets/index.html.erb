<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>Tweets</h1>
    </div>
    <div class="col-6 text-right">
      <% if user_signed_in? %>
        <%= link_to 'New Tweet', new_tweet_path, class:"btn btn-primary text-white" %>
      <% end %>
    </div>
  </div>
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>User</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= tweet.user.email %></td>
          <td><%= tweet.content %></td>
          <td><%= link_to 'Show', tweet %></td>
          <% if tweet.user == current_user %>
            <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>