<%= javascript_pack_tag 'gallery', 'data-turbolinks-track': 'reload' %>
<p>
  <strong>Name:</strong>
  <%= @gallery.name %>
</p>

<p>
  <strong>Discription:</strong>
  <%= @gallery.discription %>
</p>

  <strong>Images:</strong>
  <div class="container">
		<div class="row">
			<div class="row">
			  <% @gallery.pictures.each do | image |%>
				  <div class="col-lg-3 col-md-4 col-xs-6 thumb">
				      <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-title="" data-image="<%= image.url.url %>" data-target="#image-gallery">
				       <img class="img-thumbnail" src="<%= image.url.url %>" alt="Another alt text" width="300" height="300">
				      </a>
				  </div>            
  			<% end %>
  		</div>  		
  		<div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  		  <div class="modal-dialog modal-lg">
  		    <div class="modal-content">
  		      <div class="modal-header">
  		        <h4 class="modal-title" id="image-gallery-title"></h4>
  		        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
  		        </button>
  		      </div>
  		      <div class="modal-body">
  		        <img id="image-gallery-image" class="img-responsive col-md-12" src="" width="300" height="300">
  		      </div>
  		      <div class="modal-footer">
  		        <button type="button" class="btn btn-secondary float-left" id="show-previous-image"><i class="fa fa-arrow-left"></i>
  		        </button>
  		        <button type="button" id="show-next-image" class="btn btn-secondary float-right"><i class="fa fa-arrow-right"></i>
  		        </button>
  		      </div>
  		    </div>
  		  </div>
  		</div>
  	</div>
  </div>

<%= link_to 'Edit', edit_gallery_path(@gallery) %> |
<%= link_to 'Back', galleries_path %>